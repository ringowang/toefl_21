<h2>第<%= @chapter %>章节</h2>
<br>

<table class="table table-striped">
  <colgroup>
      <col class="col-md-1">
      <col class="col-md-1">
      <col class="col-md-1">
      <col class="col-md-1">
      <col class="col-md-5">
  </colgroup>
  <thead>
    <tr>
      <th>单词</th>
      <th>记住了？</th>
      <th>权重</th>
      <th>显示释义</th>
      <th>释义</th>
    </tr>
  </thead>

  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td><%= word.content %></td>
        <td><%= 1 %></td>
        <td><%= word.weight %></td>
        <td>就看一眼</td>
        <td><p hidden><%= word.meaning %></p></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= will_paginate @words %>

<script>
$(document).ready(function(){
  $('table tr').each(function(){
    $(this).children().eq(3).click(function(){
      $(this).next().children().toggle();
    });
  });
});

$(document).ready(function(){
  $('table th').eq(3).click(function(){
    $('table tr').each(function(){
      $(this).children().eq(4).children().show()
    });
  });
});

$(document).ready(function(){
  $('table th').eq(4).click(function(){
    $('table tr').each(function(){
      $(this).children().eq(4).children().hide()
    });
  });
});
</script>